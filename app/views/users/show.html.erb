<div class="wrapper">
  <div id="user_bg">
    <div class="user_avatar" style="background-image: url('<%= @user.avatar.url(:medium)%>')"></div>
  </div>

  <div class="row">

    <div class="large-4 columns">
      <h2>Личная информация </h2><br/>
      <% @user ||= current_user %>
      <p>
        <a href="<%= following_user_path(@user) %>">
          <strong id="following" class="stat">
            <%= @user.followed_users.count %>
          </strong>
          подписок
        </a></p>

      <p>
        <a href="<%= followers_user_path(@user) %>">
          <strong id="followers" class="stat">
            <%= @user.followers.count %>
          </strong>
          подписано
        </a>
      </p>

      <p><strong>Имя:</strong> <%= @user.name %></p>

      <p><strong>Email:</strong> <%= @user.email %></p>

      <p><strong>Краткая ифнормация:</strong> <%= @user.info %></p>
    </div>
    <div class="large-4 columns">
      <%= render 'follow_form' if signed_in? %>
      <%= render 'layouts/achivment_form' if current_user?(@user)%>
      <% if @user.achivments.any? %>
          <h3>Достижения (<%= @user.achivments.count %>)</h3>
          <ol class="microposts">
            <%= render @achivments%>
          </ol>
      <% end %>
    </div>
    <div class=" large-4 columns">
      <br/>
      <%= render 'layouts/micropost_form' if current_user?(@user)%>
      <% if @user.microposts.any? %>
          <h3>Посты (<%= @user.microposts.count %>)</h3>
          <ol class="microposts">
            <%= render @microposts %>
          </ol>
      <% end %>
    </div>

  </div>
</div>
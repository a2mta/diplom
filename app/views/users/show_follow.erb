<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @user.name %></h1>
    </section>
    <section>
      <%= render 'layouts/stats' %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
              <%= image_tag(user.avatar.url(:thumb), class: "user_avatar") %>
          <% end %>
        </div>
    <% end %>
    <% if @users.any? %>
        <ul class="users">
          <%= render @users %>
        </ul>
    <% end %>
  </div>
</div>
<%= form_for(@micropost) do |f| %>
    <% if flash[:error] %>
        <div data-alert class="columns small-centered alert-box warning radius">
          <%= flash[:error] %>
          <a href="#" class="close">&times;</a>
        </div>
    <% end %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Напишите что нибудь..." %>
    </div>
    <%= f.submit "Post", class: "button radius" %>
<% end %>
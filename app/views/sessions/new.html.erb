<h1>Sign in</h1>
<%= form_for(:session, :url => sessions_path) do |f| %>
    <div class="row">
      <div class="small-9">
        <div class="row">
          <div class="small-9 columns">
            <%= f.label :email %>
            <%= f.text_field :email %>
          </div>
        </div>
        <div class="row">
          <div class="small-9 columns">
            <%= f.label :password %>
            <%= f.password_field :password %>
          </div>
        </div>
        <div class="filed">
          <%= f.submit "Sign in", :class => 'button radius' %>
        </div>
      </div>
    </div>
<% end %>







<p>New user? <%= link_to "Sign ip now!", signup_path %></p>